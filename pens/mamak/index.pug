.container
    p Teh Tarik
    
    .teh-tarik
        .cup
            .handle
            .cup-body
            .cup-mouth
        .cup-shape
            - var shapeCount=4
            - while(shapeCount>0)
                .shape(id="shape-"+shapeCount--)
        .bubbles
            - var bubbleCount=11*3
            - while(bubbleCount>0)
                .bubble(id="bubble-"+bubbleCount--)
    
    p Sirap Bandung
    .sirap-bandung
        .cup
        .cup-mouth
        .straw
        .ice-area
            - var iceCount = 6
            - while(iceCount > 0)
                .ice(id="ice-" + iceCount--)


    p Kopi
    .kopi
        .handle
        .saucer
        .cup
        .cup-mouth
        .pattern
        .bubbles

    p Limau Ais
    .limau-ais
        .cup
            .handle
            .cup-body
            .cup-mouth
        .limaus
            .limau
            .limau
        .ice-area
            - var iceCount = 6
            - while(iceCount > 0)
                .ice(id="ice-" + iceCount--)


